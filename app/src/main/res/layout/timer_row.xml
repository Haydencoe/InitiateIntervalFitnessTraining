<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="399dp"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="406dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_above="@+id/textView1"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-76dp"
                android:gravity="center"
                android:maxLength="10"
                android:maxLines="1"
                android:text="@string/test"
                android:textAppearance="@android:style/TextAppearance.Large" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="76dp"
                android:text="Prepare:" />

            <TextView
                android:id="@+id/prepare_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView1"
                android:layout_marginStart="100dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="Workout:" />

            <TextView
                android:id="@+id/workout_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/prepare_text"
                android:layout_below="@+id/textView1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/workout_text"
                android:text="Rest:" />

            <TextView
                android:id="@+id/rest_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/prepare_text"
                android:layout_alignTop="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/textView1"
                android:layout_centerVertical="true"
                android:text="Cycles:" />

            <TextView
                android:id="@+id/cycles_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/prepare_text"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_above="@+id/setrest_text"
                android:layout_alignStart="@+id/textView1"
                android:text="Sets:" />

            <TextView
                android:id="@+id/sets_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/prepare_text"
                android:layout_below="@+id/textView4"
                android:text="1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/textView1"
                android:layout_alignTop="@+id/setrest_text"
                android:text="Set Rest" />

            <TextView
                android:id="@+id/setrest_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/prepare_text"
                android:layout_below="@+id/sets_text"
                android:text="30" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/setrest_text"
                android:text="Cool Down" />

            <TextView
                android:id="@+id/cooldown_text"
                android:layout_width="179dp"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/prepare_text"
                android:layout_alignTop="@+id/textView7"
                android:text="60" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/background_light"
                android:tint="@android:color/darker_gray"
                card_view:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/background_light"
                android:onClick="showMenu"
                card_view:srcCompat="@drawable/ic_more_vert_black_24dp" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="267dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView1"
                android:layout_marginBottom="41dp"
                android:text="Total Time: " />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>